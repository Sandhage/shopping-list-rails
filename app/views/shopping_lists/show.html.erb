<div class="container">
  <h2><%= @shopping_list.name %></h2>
  <p class="list-description"><%= @shopping_list.description %></p>
  <% items = @shopping_list.items %>
  <h4>List:</h4>
  <% if !items.any? %>
    <%= "<p>-empty-</p>".html_safe %>
  <% else %>
    <ul>
      <% items.each do |item| %>
        <li><%= item.quantity %> <%= item.name %> <%= link_to 'Remove', shopping_list_item_path(@shopping_list, item), method: :delete, data: { confirm: 'Are you sure about this?' } %></li>
      <% end %>
    </ul>
  <% end %>
  <p class="add-item-button"><%= link_to 'Add Item', new_shopping_list_item_path(@shopping_list) %></p>

</div>

<div class="container">
  <p><%= %></p>
</div>
